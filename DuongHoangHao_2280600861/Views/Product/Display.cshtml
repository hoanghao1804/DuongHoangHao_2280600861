@model DuongHoangHao_2280600861.Models.Product

<h2>Thông tin chi tiết</h2>
<div class="row">
	<div class="col-md-4">
		<img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid" style="max-width: 100%; height: auto; border: 1px solid #ddd; border-radius: 5px; padding: 5px;" />
		<a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh Sửa</a>
		<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
	
	</div>
	<div class="col-md-8">
	<h3>Name: @Model.Name</h3>
	<p>Price: @Model.Price</p>
	<p>Description: @Model.Description</p>
	</div>
</div>