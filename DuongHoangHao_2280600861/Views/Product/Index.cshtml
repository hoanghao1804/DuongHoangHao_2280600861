@model IEnumerable<DuongHoangHao_2280600861.Models.Product>


<h2>Products</h2> 

<table class="table"> 
    <thead> 
        <tr> 
            <th>Name</th> 
            <th>Price</th> 
            <th>Description</th>
            <th>Ảnh sản phẩm</th>
            <th>Category</th> 
            <th>Actions</th> 
        </tr> 
    </thead> 
    <tbody> 
    @foreach (var product in Model) 
    {
        <tr> 
            <td>@product.Name</td> 
            <td>@product.Price</td> 
            <td>@product.Description</td>
                <td>
                    <img src="@product.ImageUrl" alt="Ảnh sản phẩm" style="width: 80px; height: 100px; object-fit: cover;" />
                </td>
            <td>@product.Category?.Name </td> 
            <td>
                    <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-success">View</a>
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
            </td> 
        </tr> 
    } 
    </tbody> 
</table> 
<a asp-action="Add" class="btn btn-primary">Thêm mới</a>