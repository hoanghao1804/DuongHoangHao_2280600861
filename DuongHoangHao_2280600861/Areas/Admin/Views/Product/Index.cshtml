@model IEnumerable<DuongHoangHao_2280600861.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center mt-4">Danh sách sản phẩm</h2>
    <div class="mt-3 text-left">
        <a asp-action="Add" class="btn btn-primary mr-3">
            <i class="fas fa-plus-circle"></i> Thêm mới sản phẩm
        </a>
        <a href="/Categories/Index" class="btn btn-info">
            <i class="fas fa-list"></i> Categories
        </a>


    </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Mô tả</th>
                    <th>Giá</th>
                    <th>Danh mục</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>
                            <img src="@product.ImageUrl" alt="Ảnh sản phẩm" style="width: 80px; height: 100px; object-fit: cover;" />
                        </td>
                        <td>@product.Description</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.Category?.Name</td>
                        <td>
                            <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn btn-success btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm" onclick="deleteProduct(@product.Id)">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
