@model DuongHoangHao_2280600861.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-center">Thông tin chi tiết sản phẩm</h2>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid" style="max-width: 100%; height: auto; border: 1px solid #ddd; border-radius: 5px; padding: 5px;" />
        <div class="mt-3">
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning btn-block">Chỉnh Sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-block mt-2">Quay lại danh sách</a>
        </div>
    </div>

    <div class="col-md-8">
        <h3 class="mt-2">Tên sản phẩm: @Model.Name</h3>
        <p><strong>Giá: </strong>@Model.Price.ToString("C")</p>
        <p><strong>Mô tả: </strong>@Model.Description</p>

    </div>
</div>