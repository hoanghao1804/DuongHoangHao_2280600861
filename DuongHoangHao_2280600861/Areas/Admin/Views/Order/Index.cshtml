<h2>Danh sách Đơn Hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.DateCreated</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Order", new { area = "Admin", id = order.Id })">Sửa</a> |
                    <a href="@Url.Action("Delete", "Order", new { area = "Admin", id = order.Id })">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Order", new { area = "Admin" })">Thêm mới Đơn Hàng</a>

